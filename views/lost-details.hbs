<h1>Lost Details Page </h1>

<div class="card" style="width: 18rem;">
  <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
  <div class="card-body">
    <h5 class="card-title">Lost: {{this.lostItem}}</h5>
    <p class="card-text">Description: {{desc}}</p>
    <p class="card-text">Location: {{location}}</p>
    <p class="card-text">Date: {{lostDate}}</p>   
    <p class="card-text">Reward: {{reward}}</p> 
  </div>
</div>



{{#each comments}}
  <p>Author: {{this.author.username}}</p>
  <p>Comment: {{this.content}}</p>
{{/each}}


<form action="/lost-list/{{this._id}}" method="post"> 
<textarea name="comment" id="comment" cols="30" rows="10"></textarea>
<button type="submit">post</button>
</form>